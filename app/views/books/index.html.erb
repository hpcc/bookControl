
<h1>Listing books</h1>


<table class="table table-striped">
  <tr>
    <th>Isbn</th>
    <th>Title</th>
    <th>Author</th>
    <th>Publisher</th>
<th>Category</th>
    <th>Amazon link</th>
    <th>Proposal</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @books.each do |book| %>
  <tr>
      <td><img width="100px" src='<%= book.img_url %>'/></td>
    <td><%= book.isbn %></td>
    <td><%= book.title %></td>
    <td><%= book.author %></td>
    <td><%= book.publisher %></td>
    <td><%= book.category %></td>
    <td><a href='<%= book.amazon_link %>'>Amazon</a></td>
    <td><%= book.proposal %></td>
    <td><%= link_to 'Show', book %></td>
    <td><%= link_to 'Edit', edit_book_path(book) %></td>
    <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

